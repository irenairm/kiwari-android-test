<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/messageSender"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:background="@drawable/message"
        android:padding="10dp"
        android:text="TextViewAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAABBBBBBBBBBBBBBBBBBBBBBBBBBZZZZZZZZZZZZZZZZZZZZ"
        android:autoSizeTextType="uniform"
        android:textColor="@color/colorTextPrimary"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="23 March 2020"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/text_message_time"
        app:layout_constraintTop_toBottomOf="@+id/messageSender" />

    <TextView
        android:id="@+id/text_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="11:40"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageSender" />

</androidx.constraintlayout.widget.ConstraintLayout>